{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "moduleResolution": "node",
    "outDir": "artifacts",
    "preserveConstEnums": false,
    "pretty": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "module": "es2015",
    "target": "es2015",
    "lib": [ "webworker", "scripthost", "es6", "es7", "dom" ]
  },
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "types": [
    "react",
    "react-native",
    "jest"
  ],
  "exclude": [
    "android",
    "ios",
    "build",
    "node_modules"
  ],
  "compileOnSave": false
}
